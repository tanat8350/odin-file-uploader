extends layout

block content
  // Folder view
  h1= title
  p Welcome to #{title}
  p user :tu password :tp
  if currentUser
    form(action=`/file/folder/${folderid}` method='post')
      label(for='name') New folder&nbsp;
      input(type='text' name='name' id='name')
      span &nbsp;
      button(type='submit') Create
    if folderid
      form(action=`/file/folder/${folderid}/rename` method='post')
        label(for='rename') Rename&nbsp;
        input(type='text' name='rename' id='rename')
        span &nbsp;
        button(type='submit') Rename
      form(action=`/file/folder/${folderid}/delete` method='post')
        button(type='submit') Delete
    form(action=`/file/upload/${folderid}` method='post' enctype='multipart/form-data')
      input(type='file' name='upload')
      button(type='submit') Upload
    ul
      if folders
        for folder in folders
          li
            a(href=`/file/folder/${folder.id}`)= folder.name + '/'
      if files
          for file in files
            li
              a(href=`/file/${file.id}`)= file.originalName
              // to fix
      if !folders && !files
        p There is no folder or file
  else
    p please login
