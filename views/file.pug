extends layout

block content
  h1= title
  p Filename: #{file.name}
  p Folder id: #{file.folderid || 0}
  p Size: #{file.size}
  p Upload time: #{file.uploadTime}
  p Share expired: #{file.share}
  form(action=`/file/${file.id}/update` method='post')
    div
      label(for='move') Move to folder id&nbsp;
      input(type='text' id='move' name='move')
    div
      label(for='rename') Rename&nbsp;
      input(type='text' id='rename' name='rename')
    div
      label(for='share') Share&nbsp;
      input(type='number' id='share' name='share')
      span &nbsp;days
    button(type='submit') Update
  form(action=`/file/${file.id}/download` method='post')
    button(type='submit') Download
  form(action=`/file/${file.id}/delete` method='post')
    button(type='submit') Delete
